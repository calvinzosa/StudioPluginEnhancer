{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StudioPluginEnhancer",
  "version": "1.0.0",
  "identifier": "StudioPluginEnhancer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Studio Plugin Enhancer",
        "width": 1200,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "fullscreen": false,
        "maximizable": false,
        "center": true,
        "decorations": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Â© 2025 www.top-hat.net",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
